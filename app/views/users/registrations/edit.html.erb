<header class="bg-dark">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">
      <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <div class="logo">
            <a class="nav-link text-white" aria-current="page" href="/">WorkShare</a>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
<main>
  <div class="menu2 d-flex align-items-center box">
    <div class="container box-inner col-4">
      <div class="bg-light p-3  rounded ">
        <h1>マイページ編集</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :新パスワード %> <i>パスワードを変更しない場合は空欄にしてください</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
        <em><%= @minimum_password_length %> 文字以上で設定してください</em>
        <% end %>
        </div>

        <div class="field">
          <%= f.label :確認のためにもう一度新パスワードを %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :マイページの画像 %>
          <%= f.file_field :image %>
        </div>

        <div class="field">
          <%= f.label :現在のパスワード %> <i>(パスワードを変更するには、現在のパスワードを入力する必要があります)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "更新" %>
        </div>
        <% end %>

        <h3>アカウントを削除</h3>
         <%= button_to "削除", registration_path(resource_name), data: { confirm: "本当にアカウントを削除してよろしいですね？" }, method: :delete %>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</main>
<footer class="bg-dark">
  <div class="text-white text-center">
    Copyright Takumi Fujiwara ,2021 All Rights Reserved.
  </div>
</footer>























